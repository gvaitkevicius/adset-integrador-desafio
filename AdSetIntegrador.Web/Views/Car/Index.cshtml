@using AdSetIntegrador.Data.Entities
@model IEnumerable<Car>

@{
    ViewData["Title"] = "Index";
    int totalCars = Model.Count();
    int carsWithPhotos = Model.Count(c => c.Fotos.Any());
    int carsWithoutPhotos = totalCars - carsWithPhotos;
}

@Html.AntiForgeryToken()

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<div style="background-color: #e7e7e7;border-top: 1px solid silver">
    <div class="row" style="padding:10px">
        <div id="btnTodos" class="col-2" style="display: grid;text-align:center;cursor:pointer">
            <strong>@totalCars Veículos</strong>
            <span style="color:blue">Total</span>
        </div>
        <div id="btnComFotos" class="col-2" style="display: grid;text-align:center;cursor:pointer">
            <strong>@carsWithPhotos Veículos</strong>
            <span style="color:green">com fotos</span>
        </div>
        <div id="btnSemFotos" class="col-2" style="display: grid;text-align:center;cursor:pointer">
            <strong>@carsWithoutPhotos Veículos</strong>
            <span style="color:red">sem fotos</span>
        </div>
        <div class="col-3">
            <a asp-controller="Car" class="btn btn-success">Exportar Estoque</a>
        </div>
        <div class="col-3">
            <a asp-controller="Car" asp-action="Create" class="btn btn-primary">Cadastrar Novo Carro</a>
        </div>
    </div>
</div>

<div style="background-color: #e7e7e7; border-top: 1px solid silver">
    <div class="row" style="padding: 10px">
        <div class="col-12">
            <form asp-controller="Car" asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-2 mb-2">
                        <input type="text" class="form-control" placeholder="Placa" name="placa" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <input type="text" class="form-control" placeholder="Marca" name="marca" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <input type="text" class="form-control" placeholder="Modelo" name="modelo" />
                    </div>
                    <div class="col-md-2 mb-2">
                        <select class="form-select" name="anoMin">
                            <option value="">Ano Min</option>
                            @for (int ano = 2000; ano <= 2024; ano++)
                            {
                                <option value="@ano">@ano</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-2">
                        <select class="form-select" name="anoMax">
                            <option value="">Ano Max</option>
                            @for (int ano = 2000; ano <= 2024; ano++)
                            {
                                <option value="@ano">@ano</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-2">
                        <select class="form-select" name="preco">
                            <option value="">Preço</option>
                            <option value="10-50">10mil a 50mil</option>
                            <option value="50-90">50mil a 90mil</option>
                            <option value="90+">+90mil</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-2">
                        <select class="form-select" name="fotos">
                            <option value="">Fotos</option>
                            <option value="com">Com Fotos</option>
                            <option value="sem">Sem Fotos</option>
                        </select>
                    </div>
                    <div class="col-md-2 mb-2">
                        <select class="form-select" name="cor">
                            <option value="">Cor</option>
                            @{
                                var cores = Model.Select(c => c.Cor).Distinct().ToList();
                                foreach (var cor in cores)
                                {
                                    <option value="@cor">@cor</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 mb-2">
                        <button type="submit" class="btn btn-primary">Pesquisar</button>
                        <a asp-controller="Car" asp-action="Index" class="btn btn-secondary">Limpar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Tabela para exibir a lista de carros -->
<table id="carTable" class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th>Placa</th>
            <th>Quilometragem</th>
            <th>Cor</th>
            <th>Preço</th>
            <th>Opcionais</th>
            <th>Fotos</th>
            <th>Ações</th> <!-- Nova coluna para botões de ação -->
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr class="car-row">
                <td>@car.Marca</td>
                <td>@car.Modelo</td>
                <td>@car.Ano</td>
                <td>@car.Placa</td>
                <td>@car.Km</td>
                <td>@car.Cor</td>
                <td>@car.Preco.ToString("C2")</td>
                <td>
                    @foreach (var optional in car.Opcionais)
                    {
                        <span>@optional</span>
                        <br />
                    }
                </td>
                <td>
                    @* @foreach (var photo in car.Fotos)
                    {
                        <img src="@Url.Content(photo)" class="img-thumbnail" style="max-width: 100px; max-height: 100px; margin-bottom: 10px;" />
                    } *@
                </td>
                <td>
                    <button onclick="confirmDelete('@car.Id')" class="btn btn-danger">Excluir</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>

        function confirmDelete(carId) {
            Swal.fire({
                title: 'Tem certeza?',
                text: "Você não poderá reverter isso!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sim, exclua!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    var token = $('input[name="__RequestVerificationToken"]').val();
                    console.log(token)
                    fetch(`/api/Car/${carId}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                return response.json();
                            } else {
                                throw new Error('Erro ao excluir carro');
                            }
                        })
                        .then(data => {
                            Swal.fire(
                                'Excluído!',
                                'O carro foi excluído com sucesso.',
                                'success'
                            ).then(() => {
                                window.location.reload();
                            });
                        })
                        .catch(error => {
                            console.log('Erro ao excluir carro:', error);
                            Swal.fire(
                                'Erro!',
                                'Ocorreu um erro ao excluir o carro.',
                                'error'
                            );
                        });
                }
            });
        }
    </script>
}
